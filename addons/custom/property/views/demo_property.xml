<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!--  Action  -->
    <record id="demo_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">demo.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Property
            </p>
        </field>
    </record>
<!-- Form property-->
    <record id="view_property_form" model="ir.ui.view">
        <field name="name">demo.property.form</field>
        <field name="model">demo.property</field>
        <field name="arch" type="xml">
            <form string="property_form">
                <header>
                    <button name="sold_property" class="oe_highlight btn-primary" type="object" string="Sold" attrs="{'invisible': [('state','in', ('sold'))]}"/>
                    <button name="cancel_property" type="object" string="Cancel" attrs="{'invisible': [('state','in', ('sold','canceled'))]}"/>
                    <button name="un_cancel_property" type="object" string="Un Cancel" attrs="{'invisible': [('state','in', ('new','processing','sold'))]}"/>
                    <button name="un_sold" type="object" string="Un Sold" attrs="{'invisible': [('state','in', ('new','processing','canceled'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,canceled,processing,sold"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>

                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_edit_color': False}"/>
                    </div>
                    <group name="primary_info" string="Detail">
                        <group>
                            <field name="property_type_id"></field>
                            <field name="post_code"></field>
                            <field name="available_from" optional="hide"></field>
                        </group>
                        <group>
                            <field name="expected_price"></field>
                            <field name="selling_price"></field>
                            <field name="best_offer"></field>
                            <field name="is_good_choice"></field>
                        </group>
                    </group>
                    <group name="sub_info" string="More Detail">
                        <field name="create_date"></field>
                        <field name="write_date"></field>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <group name="description_property" string="Description">
                                <group>
                                    <field name="description_property"/>
                                    <field name="bedrooms"/>
                                    <field name="live_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" attrs="{'invisible': [('garden','=', False)]}"/>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden','=', False)]}"/>
                                    <field name="total_area"/>
                                </group>
                            </group>
                        </page>

                        <page string="Offers" name="offer_list">
                            <field name="offer_ids" colspan="4" nolabel="1" height="260">
                                <tree string="Offer lists" decoration-info="status == False" decoration-muted="status == 'refuse'"
                                      decoration-success="status == 'accepted'" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="deadline"/>
                                    <field name="status"/>
                                    <button name="accepted_offer" string="Accepted" type="object" icon="fa-check"/>
                                    <button name="refuse_offer" string="Refuse" type="object" icon="fa-level-down"/>
                                </tree>
                                <form string="Create Offer">
                                    <group name="sub_info" string="More Detail">
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="validity"/>
                                        <field name="deadline"/>
                                        <field name="status"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <page string="Other Info" name="other_information">
                            <group>
                                <group name="sales_person" string="Sales">
                                    <field name="sale_man_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </group>
                        </page>

                        <page string="Buyer Signature" name="buyer_signature">
                            <group>
                                <group name="signature" string="Buyer Signature">
                                    <field name="signed_by"/>
                                    <field name="signed_on"/>
                                    <field name="signature" widget="image"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>
<!-- Form property_type-->
    <record id="view_property_type_form" model="ir.ui.view">
        <field name="name">demo.property.type.form</field>
        <field name="model">demo.property.type</field>
        <field name="arch" type="xml">
            <form string="property_type_form">
                <sheet>
                    <group name="primary_info">
                        <field name="name"/>
                    </group>
                    <group name="sub_info" string="More Detail">
                        <field name="create_date"></field>
                        <field name="write_date"></field>
                    </group>
                    <notebook>
                        <page string="Properties" name="properties">
                            <field name="property_ids" colspan="4" nolabel="1" height="260">
                                <tree string="Property lists">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name" string="Title"/>
                                    <field name="expected_price" string="Expected Price"/>
                                    <field name="state" string="Status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
<!-- Tree  list view-->
    <record id="view_property_tree" model="ir.ui.view">
        <field name="name">demo.property.tree</field>
        <field name="model">demo.property</field>
        <field name="arch" type="xml">
            <tree string="Properties" create="true" default_order="create_date desc" multi_edit="1" decoration-info="state == 'new'"
                  decoration-muted="state == 'canceled'" decoration-success="state == 'sold'" decoration-primary="state == 'processing'">
                <field name="name"></field>
                <field name="property_type_id"></field>
                <field name="post_code"></field>
                <field name="available_from"></field>
                <field name="expected_price"></field>
                <field name="best_offer"></field>
                <field name="selling_price"></field>
                <field name="is_good_choice"></field>
                <field name="sale_man_id"/>
                <field name="buyer_id"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_edit_color': False}"></field>
                <field name="state"/>
                <field name="create_date"></field>
                <field name="write_date"></field>
            </tree>
        </field>
    </record>
<!-- Search config   -->
    <record id="view_property_filter" model="ir.ui.view">
        <field name="name">demo.property.select</field>
        <field name="model">demo.property</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <search string="Search Property">
                <field name="name"/>
                <field name="post_code"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="live_area" filter_domain="[('live_area','>=', self)]"/>
                <field name="facades"/>
                <filter string="Available" date="available_from" default_period="this_week" name="available_filter"/>
<!--                <field name="campaign_id"/>-->
<!--                <separator/>-->
<!--                <filter string="My Quotations" name="my_quotation" domain="[('user_id', '=', uid)]"/>-->
<!--                <separator/>-->
<!--                <filter string="Quotations" name="draft" domain="[('state','in',('draft', 'sent'))]"/>-->
<!--                <filter string="Sales Orders" name="sales" domain="[('state','in',('sale','done'))]"/>-->
<!--                <separator/>-->
<!--                <filter string="Create Date" name="filter_create_date" date="create_date"/>-->
                <group expand="0" string="Group By">
<!--                    <filter string="Salesperson" name="salesperson" domain="[]" context="{'group_by': 'user_id'}"/>-->
<!--                    <filter name="customer" string="Customer" domain="[]" context="{'group_by': 'partner_id'}"/>-->
                    <filter name="postcode_filter" string="Postcode" domain="[]" context="{'group_by': 'post_code'}"/>
                </group>
            </search>
        </field>
    </record>
<!-- Kanban  view-->
    <record id="view_property_kanban" model="ir.ui.view">
        <field name="name">demo.property.kanban</field>
        <field name="model">demo.property</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_content oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                    <field name="name"/>
                                </div>
                                <div class="col-12">
                                    <field name="sale_man_id"/>
                                </div>
                                <div class="col-12">
                                    <field name="selling_price"/>
                                </div>
                                <div class="col-12">
                                    <field name="buyer_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
<!-- Action  -->
    <record id="demo_property_type_action" model="ir.actions.act_window">
        <field name="name">Properties Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">demo.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Property Type
            </p>
        </field>
    </record>
<!--  Action  -->
    <record id="demo_property_tag_action" model="ir.actions.act_window">
        <field name="name">Properties Tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">demo.property.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Property Tag
            </p>
        </field>
    </record>
</odoo>