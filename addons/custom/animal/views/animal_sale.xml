<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="animal_sale_order_form_inherited" model="ir.ui.view">
        <field name="name">sale.order.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="sale_description"></field>
            </field>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="date_order"></field>
            </xpath>
        </field>
    </record>

    <record id="animal_sale_order_list_inherited" model="ir.ui.view">
        <field name="name">sale.order.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="sale_description"></field>
            </field>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="date_order"></field>
            </xpath>
        </field>
    </record>

    <record id="animal_sale_order_list_inherited" model="ir.ui.view">
        <field name="name">sale.order.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="sale_description"></field>
            </field>

            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="string">Animal Order Date</attribute>
            </xpath>

        </field>
    </record>
</odoo>